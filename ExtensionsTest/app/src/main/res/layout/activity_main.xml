<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/animeInput"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text" android:text="Kobayashi" />

    <Button
        android:id="@+id/animeFindButton"
        android:layout_width="175dp"
        android:layout_height="44dp"
        android:text="@string/button_find_anime" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_found_anime" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sourceAnimeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_found_episodes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sourceEpisodeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>